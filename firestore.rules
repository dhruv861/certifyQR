rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow public read access to verified certificates
    match /iadc_certificates/{certificateId} {
      allow read: if true;
      // Allow anyone to create a certificate. 
      // In a real-world app, this should be restricted to authenticated users.
      allow create: if true;
      
      // Allow updates and deletes for admin operations.
      // In a real-world app, this should be restricted to authenticated admin users.
      allow update, delete: if true;
    }

    // By default, deny all other reads and writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
